// https://leetcode.com/submissions/detail/1023869285/

class Solution {

    /**
     * @param Integer $x
     * @return Boolean
     * Readable iterable version
     */
    function isPalindrome($x) {
        $string_x = strval($x);

        $reversed_string = '';
        for ($i = strlen($string_x) - 1; $i >= 0; $i--)
        {
            $reversed_string .= $string_x[$i];
        }

        return $string_x === $reversed_string;
    }
}
